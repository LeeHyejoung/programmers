class Solution {
    public int solution(int[] array) {
        int answer = 0;
        String str = "";
        int length = 0;
        
        for (int i = 0; i < array.length; i++)
            str += array[i];
        
        length = str.length();
        str = str.replaceAll("7", "");

        answer = length - str.length();
        
        return answer;
    }
}
